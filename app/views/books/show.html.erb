<h4>Book Details</h4>
<%= link_to 'Back to Book Collection', books_path %>

  <table>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>ISBN</th>
      <th>Genre</th>
    </tr>

      <tr>
        <td><%= @book.title %></td>
        <td><%= @book.author %></td>
        <td><%= @book.isbn %></td>
        <td><%= @book.genre %></td>
        <td><%= link_to 'delete', book_path(@book), method: :delete %></td>
      </tr>
  </table>
